rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read/write their own data
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to read/write daily logs
    match /daily_logs/{logId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null && 
                    request.auth.uid == resource.data.userId;
      allow delete: if request.auth != null && 
                    request.auth.uid == resource.data.userId;
    }
    
    // Allow authenticated users to read/write chat messages
    // This covers both conversation documents and their messages subcollection
    match /conversations/{conversationId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
      
      // Also need to cover the messages subcollection
      match /messages/{messageId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null;
        allow update: if request.auth != null;
        allow delete: if request.auth != null;
      }
    }
    
    // Allow authenticated users to read roadmaps
    match /roadmaps/{roadmapId} {
      allow read: if request.auth != null;
      allow write: if false; // Only admins can write
    }
    
    // Allow authenticated users to read/write profile photos metadata
    match /profile_photos/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Allow authenticated users to read/write submissions
    match /submissions/{submissionId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}